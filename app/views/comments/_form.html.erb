<%= form_for Comment.new, :remote => true, :html => {:multipart => true} do |f| %>
	<%= hidden_field_tag 'comment[article_id]', @article.id %>  
	<div class='field'>
		<%= f.label 'Новый комментарий', :style => 'width: 300px;' %><br/>
		<%= f.text_area :body, :style => 'width:600px; height: 40px;'  %> 
	</div>
  
	<h3>Вложения</h3>
	<a class='add_attachment'>добавить</a>
	<div class='attachments'>
	</div>
	

	<div class='actions'>
		<%= f.submit 'Комментировать' %>
	</div>
<% end %>