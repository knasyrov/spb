<div class='comments'>
  <h2>Комментарии: <%= @article.comments.size %></h2>

   <% @article.comments.each do |comment| %>
    <div class='comment'>
      <%= comment.body %>
      <div id='created_at'>
        <%= comment.created_at.strftime("%Y.%m.%d | %H:%M") %>
      </div>
    </div>
  <% end %>
</div>